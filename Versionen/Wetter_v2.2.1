float xstart, xnoise, ystart, ynoise;    

void setup() {    
  size(800 , 600); 
  smooth(); 
  background(0); 
  frameRate(24);
  
  xstart = random(10); 
  ystart = random(10);
  
  background(0);  
  
  //clouds
  xstart += 0.01;  
  ystart += 0.01;
  
  xnoise = xstart; 
  ynoise = ystart; 
  
  for (int y = 0; y <= height; y+=5) { 
    ynoise += 0.1;                                     
    xnoise = xstart; 
    for (int x = 0; x <= width; x+=5) { 
      xnoise += 0.1;     
      drawPoint(x, y, noise(xnoise, ynoise));
    }
  }
}

